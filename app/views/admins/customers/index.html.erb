<h4 class="mb-5 ml-3">会員一覧</h4>

<table class="table">
  <thead class="thead-light">
    <tr>
      <th>会員ID</th>
      <th>氏名</th>
      <th>メールアドレス</th>
      <th>ステータス</th>
    </tr>
  </thead>

  <tbody>
    <% @customers.each do |customer| %>
    <tr>
      <td>
        <%= customer.id %>
      </td>
      <td>
        <%= link_to admins_customer_path(customer.id) do %>
        <%= customer.last_name %><%= customer.first_name %>
        <% end %>
      </td>
      <td>
        <%= customer.email %>
      </td>
      <td>
      <% if customer.is_active? %>
        <p>有効</p>
      <% else %>
        <p>退会</p>
      <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
<div class="pagination justify-content-center">
  <%= paginate @customers %>
</div>