<div class="container">
  <div class="row mb-5">
    <h4>
      <%= @customer.last_name %><%= @customer.first_name %>の会員詳細
    </h4>
  </div>

  <div class="border text-justify">
    <div>
      会員ID：<span class="col"><%= @customer.id %></span><br />
      氏名：<span class="col"><%= @customer.last_name %><%= @customer.first_name %></span><br />
      フリガナ：<span class="col"><%= @customer.last_name_kana %><%= @customer.first_name_kana %></span><br />
      郵便番号：<span class="col"><%= @customer.postal_code %></span><br />
      住所：<span class="col"><%= @customer.address %></span><br />
      電話番号：<span class="col"><%= @customer.telephone_number %></span><br />
      メールアドレス：<span class="col"><%=@customer.email %></span><br />
      会員ステータス：<span class="col">
        <% if @customer.is_active? %>
        <span>有効</span>
        <% else %>
        <span>退会</span>
        <% end %>
      </span><br />

      <%= link_to '編集する', edit_admins_customer_path(@customer.id), class: "btn btn-success mt-3" %>

      <%= link_to '注文履歴一覧を見る', admins_root_path, class: "btn btn-primary ml-5 mt-3" %>

    </div>
  </div>
</div>