<div class="container">
  <div class="row mb-5">
    <h4>
      <%= @customer.last_name %><%= @customer.first_name %>の会員詳細
    </h4>
  </div>

  <div class="row">
      <span class="col-2">会員ID：</span><span class="col-10"><%= @customer.id %></span><br />
      <div class="w-100 mt-3"></div>
      <span class="col-2">氏名：</span><span class="col-10"><%= @customer.last_name %><%= @customer.first_name %></span><br />
      <div class="w-100 mt-3"></div>
      <span class="col-2">フリガナ：</span><span class="col-10"><%= @customer.last_name_kana %><%= @customer.first_name_kana %></span><br />
      <div class="w-100 mt-3"></div>
      <span class="col-2">郵便番号：</span><span class="col-10"><%= @customer.postal_code %></span><br />
      <div class="w-100 mt-3"></div>
      <span class="col-2">住所：</span><span class="col-10"><%= @customer.address %></span><br />
      <div class="w-100 mt-3"></div>
      <span class="col-2">電話番号：</span><span class="col-10"><%= @customer.telephone_number %></span><br />
      <div class="w-100 mt-3"></div>
      <span class="col-2">メールアドレス：</span><span class="col-10"><%=@customer.email %></span><br />
      <div class="w-100 mt-3"></div>
      <span class="col-2">会員ステータス：</span>
        <% if @customer.is_active? %>
        <span class="col-10">有効</span>
        <% else %>
        <span class="col-10">退会</span>
        <% end %>
      <br />
  </div>

  <div class="row">
    <div class="col-2"></div>
    <span class="col-10">
      <%= link_to '編集する', edit_admins_customer_path(@customer.id), class: "btn btn-success mt-3" %>

      <%= link_to '注文履歴一覧を見る', admins_root_path, class: "btn btn-primary ml-5 mt-3" %>
    </span>
  </div>


</div>