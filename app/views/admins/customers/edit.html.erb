<div class="container mb-5">
  <h4 class="row mb-5">
    <%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集
  </h4>

  <%= form_with model: @customer, url: admins_customer_path, local: true do |f| %>
    <div class="form-group">
      <%= f.label :id, '会員ID', class: "col-2" %>
      <%= f.label :"#{@customer.id}", class: "form-control-sm col-2" %>
    </div>
    <div class="form-group">
      <%= f.label :"氏名", class: "col-2" %>
      <span><%= f.text_field :last_name, class: "form-control-sm col-2" %></span>
      <span class="ml-2"><%= f.text_field :first_name, class: "form-control-sm col-2" %></span>
    </div>
    <div class="form-group">
      <%= f.label :"フリガナ", class: "col-2" %>
      <span><%= f.text_field :last_name_kana, class: "form-control-sm col-2" %></span>
      <span class="ml-2"><%= f.text_field :first_name_kana, class: "form-control-sm col-2" %></span>
    </div>
    <div class="form-group">
      <%= f.label :postal_code, '郵便番号', class: "col-2" %>
      <%= f.text_field :postal_code, class: "form-control-sm col-2" %>
    </div>
    <div class="form-group">
      <%= f.label :address, '住所', class: "col-2" %>
      <%= f.text_field :address, class: "form-control-sm col-6" %>
    </div>
    <div class="form-group">
      <%= f.label :telephone_number, '電話番号', class: "col-2" %>
      <%= f.text_field :telephone_number, class: "form-control-sm col-2" %>
    </div>
    <div class="form-group">
      <%= f.label :email, 'メールアドレス', class: "col-2" %>
      <%= f.text_field :email, class: "form-control-sm col-2" %>
    </div>
    <div class= "form-group">
      <label class="col-2">会員ステータス</label>
      <%= f.radio_button :is_active, true %>
      <%= f.label :有効 %>

      <%= f.radio_button :is_active, false, class: "ml-2" %>
      <%= f.label :退会 %>
    </div>
    <div class="form-group col">
      <%= f.submit "変更を保存", class: "btn btn-success" %>
    </div>
  <% end %>
</div>