<div class="container">
  <div class="row mx-auto">
    <h4 class="col-12">管理者ログイン</h4>
  </div>

    <div>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-horizontal">
        <div class="form-group mt-4">
            <%= f.label :メールアドレス, class: 'col-2 offset-1' %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control-sm col-4" %>
        </div>

        <div class="form-group">
          <%= f.label :パスワード, class: 'col-2 offset-1' %>
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control-sm col-4" %>
        </div>

        <!--<% if devise_mapping.rememberable? %>-->
          <!--<div class="field">-->
            <!--<%= f.check_box :remember_me %>-->
            <!--<%= f.label :remember_me %>-->
          <!--</div>-->
        <!--<% end %>-->

        <div class="actions col offset-3">
          <%= f.submit "ログイン", class: "btn btn-primary col-2 mr-2" %>
        </div>
      </div>
      <% end %>

      <!--<%= render "admins/shared/links" %>-->
    </div>
</div>