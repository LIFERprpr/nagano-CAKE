<div class="container">

  <h4 class="mt-4 mb-4">管理者ログイン</h4>

    <div>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-horizontal">
        <div class="form-group">
            <%= f.label :メールアドレス, class: 'col-2' %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control-sm col-2" %>
        </div>

        <div class="form-group">
          <%= f.label :パスワード, class: 'col-2' %>
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control-sm col-2" %>
        </div>

        <!--<% if devise_mapping.rememberable? %>-->
          <!--<div class="field">-->
            <!--<%= f.check_box :remember_me %>-->
            <!--<%= f.label :remember_me %>-->
          <!--</div>-->
        <!--<% end %>-->

        <div class="actions">
          <%= f.submit "ログイン", class: "btn btn-primary" %>
        </div>
      </div>
      <% end %>

      <!--<%= render "admins/shared/links" %>-->
    </div>
</div>