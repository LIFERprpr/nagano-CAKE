<div class="container">
  <div class="row">
    <h4 class="col-sm-2">商品詳細</h4>
  </div>
  <div class="row">
    <%= attachment_image_tag @item, :image, format: 'jpeg', size: "100x180", class: "col-4" %>
    <div class="col-8">
      <p>商品名：<%= @item.name %></p>
      <p>商品説明：<%= @item.introduction %></p>
      <p>税込み価格(税抜価格)：<%= @item.add_tax_price.to_s(:delimited) %> (<%= @item.price.to_s(:delimited) %>)円</p>
    <div class="btn justify-content-center">
      <%= link_to '編集する', edit_admins_item_path(@item.id), class: "btn btn-success" %>
    </div>
    </div>
  </div>
</div>