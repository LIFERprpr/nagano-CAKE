<h4 class="ml-3">商品一覧</h4>
<div class="text-right mb-3 mr-3">
  <%= link_to '+', new_admins_item_path, class: "btn btn-shadow btn-lg border-dark" %>
</div>

<table class="table">
  <thead class="thead-light">
    <tr>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜価格</th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
    <tr>
      <td>
        <%= item.id %>
      </td>
      <td>
        <%= link_to admins_item_path(item.id) do %>
        <%= item.name %>
        <% end %>
      </td>
      <td>
        <%= item.price.to_s(:delimited) %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
<div class="pagination justify-content-center">
<%= paginate @items %>
</div>
