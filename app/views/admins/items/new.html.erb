<h4>商品新規登録</h4>
<%= form_with model: @item, url: admins_items_path, local: true do |f| %>
<div class="form-group">
  <%= f.label :image, '商品画像' %>
  <%= f.attachment_field :image %>
</div>
<div class="form-group">
  <%= f.label :name, '商品名' %>
  <%= f.text_field :name %>
</div>
<div class="form-group">
  <%= f.label :introduction, '商品説明' %>
  <%= f.text_area :introduction %>
</div>
<div class="form-group">
  <%= f.label :price, '税抜き価格' %>
  <%= f.text_field :price %>円
</div>
<div class="form-group">
  <%= f.submit "新規登録" %>
</div>
  <% end %>
