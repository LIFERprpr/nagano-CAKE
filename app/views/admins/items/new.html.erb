<div class="container">
  <h4>商品新規登録</h4>

  <div class="row">
    <%= form_with model: @item, url: admins_items_path, local: true do |f| %>
    <div class="col-sm form-group">
      <%= f.label :image, '商品画像',class: "col-form-label" %>
      <%= f.attachment_field :image, class: "form-control-file" %>
    </div>
    <div class="col-sm form-group">
      <%= f.label :name, '商品名' %>
      <%= f.text_field :name, class: "form-control", placeholder: "商品名" %>
    </div>
    <div class="col-sm form-group">
      <%= f.label :introduction, '商品説明' %>
      <%= f.text_area :introduction, class: "form-control", placeholder: "ここに説明文を記述します" %>
    </div>
    <div class="col-sm form-group">
      <%= f.label :price, '税抜き価格' %>
      <%= f.text_field :price, class: "form-control", placeholder: "1000" %>円
    </div>
    <div class="col-sm form-group">
      <%= f.submit "新規登録", class: "btn btn-success" %>
    </div>
      <% end %>
  </div>
</div>