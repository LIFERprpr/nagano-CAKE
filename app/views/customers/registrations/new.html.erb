<div class="container">
  <div class="row">
    <h2 class="col offset-1">新規会員登録</h2>
  </div>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "customers/shared/error_messages", resource: resource %>
      <div class="form-horizontal mt-4">

        <div class="form-group">
          <%= f.label :名前, class: 'col-3 offset-2' %>
          (姓)<%= f.text_field :last_name, autofocus: true, class: 'form-control-sm ml-4 mr-2' %>
          (名)<%= f.text_field :first_name, autofocus: true, class: 'form-control-sm ml-4' %>
        </div>

        <div class="form-group">
          <%= f.label :フリガナ, class: 'col-3 offset-2' %>
          (セイ)<%= f.text_field :last_name_kana, autofocus: true, class: 'form-control-sm ml-2 mr-2' %>
          (メイ)<%= f.text_field :first_name_kana, autofocus: true, class: 'form-control-sm ml-2' %>
        </div>

        <div class="form-group">
          <%= f.label :メールアドレス, class: 'col-3 offset-2' %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control-sm ml-5' %>
        </div>

        <div class="form-group">
          <%= f.label :郵便番号（ハイフンなし）, class: 'col-3 offset-2' %>
          <%= f.text_field :postal_code, autofocus: true, class: 'form-control-sm ml-5' %>
        </div>

        <div class="form-group">
          <%= f.label :住所, class: 'col-3 offset-2' %>
          <%= f.text_field :address, autofocus: true, class: 'form-control-sm ml-5 col-5' %>
        </div>

        <div class="form-group">
          <%= f.label :電話番号（ハイフンなし）, class: 'col-3 offset-2' %>
          <%= f.text_field :telephone_number, autofocus: true, class: 'form-control-sm ml-5' %>
        </div>

        <div class="form-group">
          <span class="col-3 offset-2 mr-5">
          <%= f.label :パスワード %>
          <% if @minimum_password_length %>
          <em>（<%= @minimum_password_length %> 文字以上）</em>
          <% end %>
          </span>
          <%= f.password_field :password, autocomplete: "new-password", class: 'form-control-sm ml-5' %>
        </div>

        <div class="form-group">
          <%= f.label :パスワード（確認用）, class: 'col-3 offset-2' %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control-sm ml-5' %>
        </div>

        <div class="actions col offset-5">
          <%= f.submit "新規登録", class: 'btn btn-success col-2 ml-4 ' %>
        </div>
      </div>
    <% end %>

    <!--<%= render "customers/shared/links" %>-->

  <div class="row mb-4">
    <h2 class="col-12 offset-1">既に登録済みの方</h2>
    <%= link_to 'こちら', customer_session_path, class: 'col-1 offset-2' %> からログインしてください。
  </div>
</div>