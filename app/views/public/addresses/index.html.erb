<div class="container mt-3 mb-5">
    <h4 class="row mb-5 mt-3">配送先登録/一覧</h4>

    <%= form_with model: @address, url:customers_addresses_path, local: true do |f| %>
    <div class="form-group">
      <%= f.label :郵便番号（ハイフンなし）, class: "col-3" %>
      <%= f.text_field :postal_code, class: "form-control-sm col-2" %>
    </div>
    <div class="form-group">
      <%= f.label :住所, class: "col-2" %>
      <%= f.text_field :address, class: "form-control-sm col-6 offset-1" %>
    </div>
    <span class="form-group">
      <%= f.label :宛名, class: "col-2" %>
      <%= f.text_field :name, class: "form-control-sm col-2 offset-1" %>
    </span>
    <span class="col offset-4">
      <%= f.submit "新規登録", class: "btn btn-success col-1" %>
    </span>
    <% end %>

  <div class="row mt-5">
    <table class="table table-bordered table-sm col-10">
      <thead class="table-secondary">
        <tr>
          <th>郵便番号</th>
          <th>住所</th>
          <th>宛名</th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @addresses.each do |address| %>
        <tr>
          <td class="col-1 align-middle">
            <%= address.postal_code %>
          </td>
          <td class="col-3 align-middle">
            <%= address.address %>
          </td>
          <td class="col-1 align-middle">
            <%= address.name %>
          </td>
          <td class="col-2 align-middle">
            <%= link_to "編集する", edit_customers_address_path(address), class: "btn btn-success ml-4" %>
            <%= link_to "削除する", customers_address_path(address), method: :delete, date: {confirm: "本当に削除してもよろしいですか？"}, class: "btn btn-danger ml-4" %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>