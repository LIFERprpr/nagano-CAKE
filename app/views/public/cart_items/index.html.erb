<div>
  <h4>ショッピングカート</h4>

  <table>
    <thead>
      <tr>
        <th>商品名</th>
        <th>単価</th>
        <th>数量</th>
        <th>小計</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @cart_items.each do |cart_item| %>
      <tr>
        <td>
          <%= cart_item.item.name %>
        </td>
        <td>
          <%= cart_item.item.add_tax_price.to_s(:delimited) %>
        </td>
        <td>
          <%= form_with model: cart_item, url: customers_cart_item_path(cart_item), method: :patch do |f| %>
          <%= f.hidden_field :item_id, value: cart_item.id %>
          <%= f.number_field :amount, in: 1..10 %>
          <%= f.submit "変更" %>
          <% end %>
        </td>
        <td>
          <%= cart_item.total_price(cart_item.amount, cart_item.item) %>
        </td>
        <td>
          <%= link_to "削除する", customers_cart_item_path(cart_item), method: :delete %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>

  <div>
    <%= link_to "買い物を続ける", root_path %>
  </div>

  <table>
    <th>合計金額</th>
    <td>
      <!--合計金額の記述をする<%=  %>-->
    </td>
  </table>
</div>