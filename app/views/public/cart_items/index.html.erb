<div>
  <h4>ショッピングカート</h4>

  <table>
    <thead>
      <tr>
        <th>商品名</th>
        <th>単価</th>
        <th>数量</th>
        <th>小計</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <tr>
        <% @cart_items.each do |cart_item| %>
        <td>
          <%= cart_item.item.name %>
        </td>
        <td>
          <%= cart_item.item.add_tax_price.to_s(:delimited) %>
        </td>
        <td>
          <%= form_with model: cart_item, url: customers_cart_item_path(cart_item), method: :patch do |f| %>
          <%= f.hidden_field :item_id, value: cart_item.id %>
          <%= f.number_field :amount, in: 1..10 %>
          <%= f.submit "変更" %>
          <% end %>
        </td>
        <td>
          <!--小計の記述を調べて変える<%= cart_item.item.add_tax_price.to_s(:delimited) %>-->
        </td>
        <% end %>
      </tr>
    </tbody>
  </table>
</div>