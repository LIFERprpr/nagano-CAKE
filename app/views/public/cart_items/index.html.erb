<div class="container mt-2 mb-5">
  <div class="row">
    <h4 class="col-10">ショッピングカート</h4>
    <%= link_to "カートを空にする", all_destroy_customers_cart_items_path, method: :delete, class: "col-2 btn btn-danger" %>
  </div>
  <div class="row mt-4">
    <table class="table table-bordered table-sm">
      <thead class="table table-secondary table-bordered">
        <tr>
          <th>商品名</th>
          <th>単価</th>
          <th>数量</th>
          <th>小計</th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @cart_items.each do |cart_item| %>
        <tr>
          <td class="col-3">
            <%= attachment_image_tag cart_item.item, :image, format: 'jpeg', size: "60x50" %>
            <%= cart_item.item.name %>
          </td>
          <td class="align-middle col-1">
            <%= cart_item.item.add_tax_price.to_s(:delimited) %>
          </td>
          <td class="align-middle col-1">
            <%= form_with model: cart_item, url: customers_cart_item_path(cart_item), method: :patch do |f| %>
            <%= f.hidden_field :item_id, value: cart_item.id %>
            <%= f.number_field :amount, in: 1..10 %>
            <%= f.submit "変更", class: "btn btn-success" %>
            <% end %>
          </td>
          <td class="align-middle col-1">
            <%= cart_item.total_price(cart_item.amount, cart_item.item).to_s(:delimited) %>
            <% @total += cart_item.total_price(cart_item.amount, cart_item.item) %>
          </td>
          <td class="align-middle col-1">
            <%= link_to "削除する", customers_cart_item_path(cart_item), method: :delete, class: "btn btn-danger ml-4" %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="row mt-3 mb-5">
    <div class="col-10">
      <%= link_to "買い物を続ける", root_path, class: "btn btn-primary" %>
    </div>


    <table class="table col-2 table-bordered">
      <th class="table table-secondary table-sm col-2">合計金額</th>
      <td class="col-1">
        <%= @total.to_s(:delimited) %>
      </td>
    </table>
  </div>
  <% if current_customer.cart_items.exists? %>
  <div class="col offset-5">
    <%= link_to "情報入力に進む", new_customers_order_path, class: "btn btn-success" %>
  </div>
  <% end %>
</div>