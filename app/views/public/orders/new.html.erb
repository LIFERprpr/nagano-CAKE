<div class="container mt-3 mb-5">
  <div class="row">
    <h4 class="col-2">注文情報入力</h4>
  </div>

  <div class="mt-2 ml-5">
      <%= form_with model: @order, url: confirm_customers_orders_path, local: true do |f| %>

        <h4>支払方法</h4>
        <div class="col">
          <%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
          <%= f.label :payment_method, Order.payment_methods_i18n[:credit_card] %><br />
        </div>
        <div class="col">
          <%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
          <%= f.label :payment_method, Order.payment_methods_i18n[:transfer] %><br />
        </div>

        <h4>お届け先</h4>
        <div class="col">
          <%= f.radio_button :select_address, 0 %>
          <%= f.label :ご自身の住所 %><br />
        </div>
        <div class="col-5 ml-4">
          〒<%= current_customer.postal_code %><%= current_customer.address %><br />
          <%= current_customer.last_name %><%= current_customer.first_name %>
        </div>
        <div class="col">
          <%= f.radio_button :select_address, 1 %>
          <%= f.label :登録済住所から選択 %><br />
        <div class="col ml-2">
          <%= f.select :address_id, options_from_collection_for_select(current_customer.addresses, :id, :full_address) %>
        </div>
        </div>
        <div class="col">
          <%= f.radio_button :select_address, 2 %>
          <%= f.label :新しいお届け先 %><br />
        </div>
        <div class="form-group col ml-2">
          <%= f.label :郵便番号（ハイフンなし）, class: "col-3" %>
          <%= f.text_field :postal_code, class: "form-control-sm col-2" %><br />
        </div>
        <div class="form-group col  ml-2">
          <%= f.label :住所, class: "col-2" %>
          <%= f.text_field :address, class: "form-control-sm col-4 offset-1" %><br />
        </div>
        <div class="form-group col ml-2">
          <%= f.label :宛名, class: "col-2" %>
          <%= f.text_field :name, class: "form-control-sm col-2 offset-1" %>
        </div>
        <div class="col-2 offset-5">
          <%= f.submit "確認画面へ進む", class: "btn btn-primary" %>
        </div>
      <% end %>
  </div>
</div>