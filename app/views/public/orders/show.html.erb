<div class="container mb-5">
  <h4 class="row mt-3 mb-4">注文履歴詳細</h4>

  <strong>注文情報<strong>
  <strong class="col offset-6">請求情報</strong>
  <div class="row">
    <table class="table table-bordered table-sm col-6">
      <tr>
        <th class="table-secondary align-middle">注文日</th>
        <td class="align-middle">
          <%= @order.created_at.strftime('%Y/%m/%d') %>
        </td>
      </tr>
      <tr>
        <th class="table-secondary align-middle">配送先</th>
        <td class="align-middle">
          〒<%= @order.postal_code %><br />
          <%= @order.address %><br />
          <%= @order.name %>
        </td>
      </tr>
      <tr>
        <th class="table-secondary align-middle">支払方法</th>
        <td class="align-middle">
          <%= @order.payment_method_i18n %>
        </td>
      </tr>
    </table>



    <table class="table table-bordered table-sm col-3 ml-5">
      <tr>
        <th class="table-secondary align-middle">商品合計</th>
        <td class="align-middle">
          <%= @order.total_payment - @order.shipping_cost %>
        </td>
      </tr>
      <tr>
        <th class="table-secondary align-middle">配送料</th>
        <td class="align-middle">
          <%= @order.shipping_cost.to_s(:delimited) %>
        </td>
      </tr>
      <tr>
        <th class="table-secondary align-middle">ご請求金額</th>
        <td class="align-middle">
          <%= @order.total_payment.to_s(:delimited) %>
        </td>
      </tr>
    </table>
  </div>

  <strong>注文商品</strong>
  <div class="row">
    <table class="table table-bordered table-sm col-8">
      <thead class="table table-secondary">
        <tr>
          <th>商品</th>
          <th>単価（税込）</th>
          <th>個数</th>
          <th>小計</th>
        </tr>
      </thead>

      <tbody>
        <% @order.order_items.each do |order_item| %>
        <tr>
          <td class="align-middle col-4">
            <%= order_item.item.name %>
          </td>
          <td class="align-middle col-2">
            <%= order_item.item.add_tax_price.to_s(:delimited) %>
          </td>
          <td class="align-middle col-1">
            <%= order_item.amount %>
          </td>
          <td class="align-middle col-1">
            <%= order_item.item.add_tax_price * order_item.amount %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>