<div>
  <h4>注文履歴詳細</h4>

  <h5>注文情報</h5>
  <table>
    <tr>
      <th>注文日</th>
      <td>
        <%= @order.created_at.strftime('%Y/%m/%d') %>
      </td>
      <th>配送先</th>
      <td>
        〒<%= @order.postal_code %><br />
        <%= @order.address %><br />
        <%= @order.name %>
      </td>
      <th>支払方法</th>
      <td>
        <%= @order.payment_method_i18n %>
      </td>
    </tr>
  </table>

  <h5>請求情報</h5>
  <table>
    <tr>
      <th>商品合計</th>
      <td>
        <%= @order.total_payment - @order.shipping_cost %>
      </td>
      <th>配送料</th>
      <td>
        <%= @order.shipping_cost %>
      </td>
      <th>ご請求金額</th>
      <td>
        <%= @order.total_payment %>
      </td>
    </tr>
  </table>

  <h5>注文商品</h5>
  <table>
    <thead>
      <tr>
        <th>商品</th>
        <th>単価（税込）</th>
        <th>個数</th>
        <th>小計</th>
      </tr>
    </thead>

    <tbody>
      <% @order.order_items.each do |order_item| %>
      <tr>
        <td>
          <%= order_item.item.name %>
        </td>
        <td>
          <%= order_item.item.add_tax_price.to_s(:delimited) %>
        </td>
        <td>
          <%= order_item.amount %>
        </td>
        <td>
          <%= order_item.item.add_tax_price * order_item.amount %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>