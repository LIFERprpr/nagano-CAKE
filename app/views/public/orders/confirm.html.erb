<div class="container">
  <h4>注文情報確認</h4>

  <div class="row">
    <table class="table table-bordered table-sm col-8">
      <thead class="table table-secondary">
        <tr>
          <th>商品名</th>
          <th>単価(税込み)</th>
          <th>数量</th>
          <th>小計</th>
        </tr>
      </thead>

      <tbody>
        <% current_customer.cart_items.each do |cart_item| %>
        <tr>
          <td class="align-middle">
            <%= attachment_image_tag cart_item.item, :image, format: 'jpeg', size: "30x30" %>
            <%= cart_item.item.name %>
          </td>
          <td class="align-middle">
            <%= cart_item.item.add_tax_price.to_s(:delimited) %>
          </td>
          <td class="align-middle">
            <%= cart_item.amount %>
          </td>
          <td class="align-middle">
            <%= cart_item.total_price(cart_item.amount, cart_item.item) %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>



    <table class="table table-bordered table-sm col-2 offset-1">
      <tr>
        <th class="table-secondary">送料</th>
        <td class="align-middle"><%= @order.shipping_cost %></td>
      </tr>
      <tr>
        <th class="table-secondary">商品合計</th>
        <td class="align-middle"><%= @total %></td>
      </tr>
      <tr>
        <th class="table-secondary">請求金額</th>
        <td class="align-middle"><%= @order.total_payment.to_s(:delimited) %></td>
      </tr>
    </table>
  </div>

  <div class="row">
    <strong>支払方法</strong>
    <span class="col-2">
      <%= @order.payment_method_i18n %>
    </span>
  </div>

  <div class="row mt-4">
    <strong>お届け先</strong>
    <span class="col-4">
      〒<%= @order.postal_code %><%= @order.address %><br />
      <%= @order.name %>
    </span>
  </div>

  <div class="col offset-5 mt-4">
    <%= form_with model: @order, url: customers_orders_path, local: true do |f| %>
      <%= f.hidden_field :customer_id, value: @order.customer_id %>
      <%= f.hidden_field :payment_method, value: @order.payment_method %>
      <%= f.hidden_field :total_payment, value: @order.total_payment %>
      <%= f.hidden_field :postal_code, value: @order.postal_code %>
      <%= f.hidden_field :address, value: @order.address %>
      <%= f.hidden_field :name, value: @order.name %>
      <%= f.submit "注文を確定する", class: "btn btn-success" %>
      <% end %>
  </div>
</div>