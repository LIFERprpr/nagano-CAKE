<div>
  <h2><%= @item.name %></h2>
  <p><%= @item.introduction %></p>
  <h3>¥<%= @item.add_tax_price.to_s(:delimited) %><span>(税込)</span></h3>

  <%= form_with model: @cart_item, url: customers_cart_items_path, method: :post do |f| %>
    <%= f.hidden_field :item_id, value: @item.id %>
    <%= f.number_field :amount, min: "1", max: "10", placeholder: "個数選択" %>
    <%= f.submit "カートに入れる" %>
  <% end %>
</div>